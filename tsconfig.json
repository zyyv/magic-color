{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "magic-color": ["./packages/magic-color/src/"],
      "magic-color/*": ["./packages/magic-color/src/*"],
      "@magic-color/core": ["./packages/core/src/"],
      "@magic-color/core/*": ["./packages/core/src/*"],
      "@magic-color/shared": ["./packages/shared/src/"],
      "@magic-color/shared/*": ["./packages/shared/src/*"],
      "@magic-color/theme": ["./packages/theme/src/"],
      "@magic-color/theme/*": ["./packages/theme/src/*"],
      "@magic-color/transformer": ["./packages/transformer/src/"],
      "@magic-color/transformer/*": ["./packages/transformer/src/*"],
      "@magic-color/vue": ["./packages/vue/src/"],
      "@magic-color/vue/*": ["./packages/vue/src/*"]
    },
    "resolveJsonModule": true,
    "types": [
      "vite/client"
    ],
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "eslint.config.mjs",
    "talk-examples/**",
    "**/public/**"
  ]
}
