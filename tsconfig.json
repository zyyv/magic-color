{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "magic-color": ["./packages/magic-color/src/indenx.ts"],
      "@magic-color/core": ["./packages/core/src/indenx.ts"],
      "@magic-color/shared": ["./packages/shared/src/indenx.ts"],
      "@magic-color/theme": ["./packages/theme/src/indenx.ts"],
      "@magic-color/transformer": ["./packages/transformer/src/indenx.ts"],
      "@magic-color/vue": ["./packages/vue/src/indenx.ts"]
    },
    "resolveJsonModule": true,
    "types": [
      "vite/client"
    ],
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "eslint.config.mjs",
    "talk-examples/**",
    "**/public/**"
  ]
}
