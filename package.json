{
  "name": "@magic-color/monorepo",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.15.6",
  "scripts": {
    "dev": "pnpm -r -F=\"./packages/*\" --parallel run dev",
    "build": "pnpm -r -F=\"./packages/*\" run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "nr build",
    "release": "nr lint:fix && bumpp -r",
    "test": "vitest",
    "test:update": "vitest -u",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks",
    "play": "pnpm -C playground dev",
    "play:build": "pnpm -C playground build",
    "talk": "pnpm -C talk dev",
    "talk:build": "pnpm -C talk build",
    "deploy": "nr play:build"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.2",
    "@antfu/ni": "^0.21.12",
    "@iconify-json/akar-icons": "^1.1.24",
    "@iconify-json/carbon": "^1.1.31",
    "@iconify-json/fluent-emoji": "^1.1.18",
    "@iconify-json/logos": "^1.1.42",
    "@iconify/utils": "^2.1.22",
    "@types/node": "^20.10.7",
    "@unocss/preset-mini": "^0.59.0",
    "bumpp": "^9.2.1",
    "eslint": "^8.56.0",
    "esno": "^4.0.0",
    "lint-staged": "^15.2.0",
    "magic-color": "workspace:*",
    "pnpm": "^8.14.0",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.3.3",
    "unbuild": "^2.0.0",
    "unocss": "^0.59.0",
    "unocss-preset-useful": "^0.4.2",
    "vite": "^5.0.11",
    "vitest": "^1.1.3",
    "vue": "^3.4.21"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
